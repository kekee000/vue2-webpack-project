// 表格列表样式

.table-list
    width: 100%
    line-height: 20px
    color: #7B7C99
    label
        font-weight: normal
        margin-bottom: 0
    thead
        border-bottom: 1px solid #ddd
        color: #444
    tbody
        tr
            &:nth-child(2n)
                background: #f5f5f5
            &:nth-child(4n)
                background: #def0d8
            &:nth-child(6n)
                background: #d9edf6
            &:nth-child(8n)
                background: #fbf8e5
    td
        padding: 21px 15px
        &:first-child
            width: 30%
        &:last-child
            width: 20%
        &.select-all-col
            width: 130px
            text-indent: 20px
    thead
        td.select-all-col
            text-indent: 0


    .table-act
        white-space: nowrap
        a
            color: $-base-color
            margin-right: 25px
            cursor: pointer
            &:last-child
                margin-right: 0
        .link-disabled
            color: #ccc
            cursor: not-allowed

// 已经修改过的动画
.row-modified
    animation: modified-animate 0.2s 2 linear
    -webkit-animation: modified-animate 0.2s 2 linear

@keyframes modified-animate {
    50% {
        background-color: rgba(27, 216, 150, 0.3)
    }
}
