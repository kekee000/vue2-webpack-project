
body.ready
    .nav-login
        display: block


// loading 提示
.loading
    position: fixed
    top: -1000px
    left: 50%
    transform: translateX(-50%)
    z-index: 10000
    padding: 15px
    font-size: 16px
    border: 1px solid transparent
    border-radius: 4px
    transition: top 0.2s ease
    color: #8a6d3b
    background-color: #fcf8e3
    border-color: #faebcc
    box-shadow: 1px 1px 5px #ccc
    &[data-status="error"]
        color: #a94442
        background-color: #f2dede
        border-color: #ebccd1

    &.show
        top: 30%

// 页面加载 loading 动画
.page-loading
    display: block
    margin: 0px auto
    font-size: 40px
    width: 40px
    height: 40px
    color: #ccc
    animation: page-loading-animate 1s infinite linear
    -webkit-animation: page-loading-animate 1s infinite linear

@keyframes page-loading-animate {
    0% {
        transform: rotate(0deg)
    }
    100% {
        transform: rotate(360deg)
    }
}


